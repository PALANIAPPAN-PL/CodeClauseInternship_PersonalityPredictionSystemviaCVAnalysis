import cv2
from keras.models import load_model
import numpy as np
from tkinter import messagebox, Tk, Label, filedialog

model = load_model('path/to/pretrained_model.h5')
face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_frontalface_default.xml')
emotions = {0: 'Angry', 1: 'Disgust', 2: 'Fear', 3: 'Happy', 4: 'Sad', 5: 'Surprise', 6: 'Neutral'}

def predict_emotion(face):
    face = cv2.cvtColor(face, cv2.COLOR_BGR2GRAY)
    face = cv2.resize(face, (48, 48))
    face = np.reshape(face, [1, 48, 48, 1])
    emotion_probabilities = model.predict(face)
    emotion_index = np.argmax(emotion_probabilities)
    emotion = emotions[emotion_index]
    return emotion

def detect_faces(image):
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    faces = face_cascade.detectMultiScale(gray, scaleFactor=1.3, minNeighbors=5)
    return faces

def process_image():
    file_path = filedialog.askopenfilename()
    if file_path:
        image = cv2.imread(file_path)
        faces = detect_faces(image)
        if len(faces) == 0:
            messagebox.showinfo("No Faces", "No faces detected in the selected image.")
        else:
            for (x, y, w, h) in faces:
                face = image[y:y + h, x:x + w]
                emotion = predict_emotion(face)
                display_result(emotion)

def display_result(emotion):
    result_label.config(text=f"Predicted Emotion: {emotion}")
    result_label.pack()

root = Tk()
root.title("Personality Prediction System")

browse_button = tk.Button(root, text="Browse Image", command=process_image)
browse_button.pack(pady=10)

result_label = Label(root, text="Predicted Emotion: ")

root.mainloop()
